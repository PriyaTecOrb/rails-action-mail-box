<div class="container">
  <div class="row text-white mb-2">
    <div class="col-lg-7"><h3 class="display-4">Products</h3> </div>
    <div class="col-lg-5 pull-right"><%= link_to "New product", new_product_path , class:"btn btn-info"%></div>
  </div>
  <div class="row">
    <div class="col-lg-12 mx-auto">
      <!-- List group-->
      <ul class="list-group shadow">
        <!-- list group item-->
        <% @products.each do |product| %>
          <li class="list-group-item">
            <!-- Custom content-->
            <div class="media align-items-lg-center flex-column flex-lg-row p-3">
              <div class="media-body order-2 order-lg-1">
                <h5 class="mt-0 font-weight-bold mb-2"><%=product.title%></h5>
                <p class="font-italic text-muted mb-0 small"><%=product.description%></p>
                <div class="d-flex align-items-center justify-content-between mt-1">
                  <h6 class="font-weight-bold my-2"><%=product.price%></h6>
                  <ul class="list-inline small">
                    <li class="list-inline-item m-0"><i class="fa fa-star text-success"></i></li>
                    <li class="list-inline-item m-0"><i class="fa fa-star text-success"></i></li>
                    <li class="list-inline-item m-0"><i class="fa fa-star text-success"></i></li>
                    <li class="list-inline-item m-0"><i class="fa fa-star text-success"></i></li>
                    <li class="list-inline-item m-0"><i class="fa fa-star-o text-gray"></i></li>
                  </ul>
                </div>
                <div class="btn-group">
                  <%= link_to "Edit this product", edit_product_path(product) , :class=>"btn btn-primary btn-sm"%>&nbsp;
                  <%= button_to "Destroy this product", @product, method: :delete , :class=>"btn btn-success btn-sm"%>
                </div>
              </div>
              <img src="https://i.imgur.com/KFojDGa.jpg" alt="Generic placeholder image" width="200" class="ml-lg-5 order-1 order-lg-2">
            </div> <!-- End -->
          </li> <!-- End -->
        <%end%>
      </ul> <!-- End -->
    </div>
  </div>
</div>