<%= form_with(model: [@product, feedback]) do |form| %>
  <% if feedback.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(feedback.errors.count, "error") %> prohibited this feedback from being saved:</h2>

      <ul>
        <% feedback.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="panel panel-default">
    <div>
      <%= form.label :user_id, style: "display: block", class: "text-white mb-2" %>
      <%= form.text_field :user_email, class: "form-control mb-4",:required => true,value: @user.email %>
      <%= form.hidden_field :user_id, class: "form-control mb-4",:required => true,value: @user.id %>
    </div>

    <div>
      <%= form.label :product_title, style: "display: block", class: "text-white mb-2" %>
      <%= form.text_field :product_title, class: "form-control mb-4",:required => true,value: @product.title %>
      <%= form.hidden_field :product_id, class: "form-control mb-4",:required => true,value: @product.id %>
    </div>

    <div>
      <%= form.label :content, style: "display: block", class: "text-white mb-2" %>
      <%= form.text_area :content, class: "form-control mb-4",:required => true %>
    </div>

    <div>
      <%= form.submit 'Save', :class => 'btn btn-success' %>
    </div>
  </div>
<% end %>
