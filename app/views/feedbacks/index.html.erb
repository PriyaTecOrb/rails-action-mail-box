<div class="container my-5 py-5 text-dark" style="background-color: #f7f6f6;">
  <div class="row d-flex justify-content-center">
    <div class="col-md-12 col-lg-10 col-xl-8">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h4 class="text-dark mb-0">Feedbacks</h4>
        <%= link_to "New feedback", new_product_feedback_path(@product.id) %>
      </div>
      <% @feedbacks.each do |feedback| %>
        <div class="card mb-3">
          <div class="card-body">
            <div class="d-flex flex-start">
              <img class="rounded-square shadow-1-strong me-3"
                src="https://i.imgur.com/KFojDGa.jpg" alt="avatar" width="40"
                height="40" />
              <div class="w-100" style="margin-left:10px;">
                <div class="d-flex justify-content-between align-items-center mb-3">
                  <h6 class="fw-bold mb-0"><%=feedback.user.email%></h6>
                  
                  <p class="mb-0">2 days ago</p>
                </div>
                <div class="d-flex justify-content-between align-items-center mb-3">
                  <p class="text-dark ms-2"><%=feedback.content%></p>
                </div> 
                <div class="d-flex justify-content-between align-items-center mb-3">
                  <div class="btn-group">
                  <%= link_to "Edit", edit_product_feedback_path(@product.id,feedback.id) , :class=>"btn btn-primary btn-sm"%>&nbsp;
                  <%= button_to "Delete", [@product,feedback], method: :delete , :class=>"btn btn-success btn-sm"%>&nbsp;  
                </div>
                 
              </div>
            </div>
          </div>
        </div>
      <%end%>  
    </div>
  </div>
</div>
